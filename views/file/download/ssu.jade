extends /layout_jq

append head
  script(src='/javascripts/pmelib/textwidth.js')

block content
  div#help-page-id file-download-ssu
  h1.hideondisconnect#section Download Match
  h2.hideondisconnect#matchname= matchname

  div(style='display:none')#serverDisconnect
    p Disconnected from server! Click 'Reload' to try to re-connect.

  div.hideondisconnect#content
    div#downloadForm
      table.config
        tr.even
          td
            span(style='margin-top: -1px;').tleft SquadSignup club name
            span.tright: input(style='padding-left: 3px;')#ec-clubname
        tr.even
          td
            span(style='margin-top: -1px;').tleft SquadSignup username
            span.tright: input(style='padding-left: 3px;')#ec-username
        tr.odd
          td
            span(style='margin-top: -1px;').tleft SquadSignup password
            span.tright: input(style='padding-left: 3px;')#ec-password
        tr.even
          td
            span(style='margin-top: -1px;').tleft Match number
            span.tright: input(style='padding-left: 3px;')#ec-matchid

      p
      div(style='display: inline-block;')
        div(style='height: 25px;')#ex-saveClub Check to save SquadSignup club name for later use
        div(style='height: 25px;')#ex-saveCredentials Check to save SquadSignup credentials for later use
        div(style='height: 25px;')#ex-saveMatchID Check to save this match number for later use
        div(style='height: 25px;')#ex-fixNameCase Check to automatically correct case of names, addresses, etc.

      div#downloadButtonDiv
        p
        button#downloadButton Download

      p(style='font-weight: bold')#message

      p.
        Clicking 'Download' will replace the current match. Be sure that
        you've saved the current match, if necessary.

  span(style='visibility: hidden; font-size: 13px; font-family: Verdana, Arial, sans-serif; font-style: normal; font-weight: normal;')#secret-span
